<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorAccent">@color/color_progress_dialog</item>
    </style>

    <style name="Container.TrackList" parent="Container.Full">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignWithParentIfMissing">true</item>
    </style>

    <style name="Container.PlaybackControls" parent="Container.WrapContent.Vertical.OrientationVertical.Padding">
        <item name="android:background">@color/window_background</item>
    </style>

    <style name="Root" parent="Container.Full">
        <item name="android:background">@color/window_background</item>
    </style>

    <style name="Root.DrawerLayout" parent="Root">
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="NavigationView" parent="Container.WrapContent.Horizontal">
        <item name="android:layout_gravity">start</item>
        <item name="headerLayout">@layout/part__drawer_header</item>
        <item name="menu">@menu/menu__drawer</item>
    </style>

    <style name="TextView.DurationStart" parent="TextView">
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="TextView.DurationEnd" parent="TextView">
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="TextView.PlaybackControls.TrackTitle" parent="TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
    </style>

    <style name="TextView.Profile.Username" parent="TextView">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">@dimen/margin</item>
        <item name="android:textSize">@dimen/profile_username_text_size</item>
    </style>

    <style name="TextView.ListItem" parent="TextView">
    </style>

    <style name="TextView.ListItem.Primary" parent="TextView.ListItem">
        <item name="android:textColor">@color/text_color_primary</item>
    </style>

    <style name="TextView.ListItem.Secondary" parent="TextView.ListItem">
        <item name="android:textColor">@color/text_color_secondary</item>
    </style>

    <style name="TextView.ListItem.Primary.Dark" parent="TextView.ListItem.Primary">
        <item name="android:textColor">@color/text_color_primary_dark</item>
    </style>

    <style name="TextView.ListItem.Secondary.Dark" parent="TextView.ListItem.Secondary">
        <item name="android:textColor">@color/text_color_secondary_dark</item>
    </style>

    <style name="TextView.ListItem.Secondary.Dark.Username" parent="TextView.ListItem.Secondary.Dark">
        <item name="android:layout_marginLeft">@dimen/margin</item>
    </style>

    <style name="TextView.ListItem.Secondary.Dark.Duration" parent="TextView.ListItem.Secondary.Dark">
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="TextView.ListItem.Secondary.Dark.PlaybackCount" parent="TextView.ListItem.Secondary.Dark">
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="ImageView.Logo" parent="ImageView">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:src">@drawable/ic__my_music</item>
    </style>

    <style name="ImageView.Avatar" parent="ImageView">
        <item name="android:layout_width">@dimen/profile_image_width</item>
        <item name="android:layout_height">@dimen/profile_image_height</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/ic__default_profile</item>
    </style>

    <style name="ImageView.PlaybackCount" parent="ImageView">
        <item name="android:src">@drawable/ic__play</item>
    </style>

    <style name="ImageButton.SkipToPrevious" parent="ImageButton">
        <item name="android:src">@drawable/ic__skip_to_previous</item>
    </style>

    <style name="ImageButton.SkipToPrevious.Inline" parent="ImageButton.SkipToPrevious">
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="ImageButton.Play" parent="ImageButton">
        <item name="android:src">@drawable/ic__play</item>
    </style>

    <style name="ImageButton.Play.Inline" parent="ImageButton.Play">
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="ImageButton.Pause" parent="ImageButton">
        <item name="android:src">@drawable/ic__pause</item>
    </style>

    <style name="ImageButton.Pause.Inline" parent="ImageButton.Pause">
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="ImageButton.SkipToNext" parent="ImageButton">
        <item name="android:src">@drawable/ic__skip_to_next</item>
    </style>

    <style name="ImageButton.SkipToNext.Inline" parent="ImageButton.SkipToNext">
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="ProgressBar.Inline" parent="ProgressBar">
        <item name="android:layout_width">@dimen/inline_progress_bar_width</item>
        <item name="android:layout_height">@dimen/inline_progress_bar_height</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="ProgressBar.Inline.LoadMore" parent="ProgressBar.Inline">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="FragmentPlaybackControls" parent="Container.WrapContent">
        <item name="android:layout_alignParentBottom">true</item>
    </style>
</resources>
