<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:support="http://schemas.android.com/apk/res-auto"
    support:cardUseCompatPadding="true"
    support:cardElevation="1dp"
    style="@style/Container.WrapContent.Vertical" >

    <RelativeLayout
        style="@style/Container.WrapContent.Vertical.Row.Padding" >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgAvatar"
            style="@style/ImageView.Avatar" />

        <TextView
            android:id="@+id/lblTitle"
            android:layout_toRightOf="@id/imgAvatar"
            android:layout_toLeftOf="@+id/btnAddToRemoveFromPlaylist"
            style="@style/TextView.ListItem.Primary.Dark.Center" />

       <Button
           android:id="@+id/btnAddToRemoveFromPlaylist"
           style="@style/Button.BorderLess.Dialog.AddToRemoveFromPlaylist" />

    </RelativeLayout>

</android.support.v7.widget.CardView>