<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Container.WrapContent.Vertical.OrientationVertical.Padding" >

    <android.support.design.widget.TabLayout
        android:id="@+id/tabs"
        app:tabMode="fixed"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/color_primary_dark"
        app:tabSelectedTextColor="@color/color_primary_dark"
        style="@style/Container.WrapContent.Vertical" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        style="@style/PlaceHolder.PlaylistActions" />
    
    <LinearLayout
        style="@style/Container.WrapContent.Vertical.DialogButtons">
        
        <Button
            android:id="@+id/btnCancel"
            style="@style/Button.BorderLess.Dialog.Cancel" />
        
    </LinearLayout>

</LinearLayout>